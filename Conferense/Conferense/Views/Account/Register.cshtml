@model Conferense.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Создание новой учетной записи.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            <small class="text-danger">
                @Html.ValidationMessageFor(m => m.FullName)
            </small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Job_Education, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Job_Education, new { @class = "form-control" })
            <small class="text-danger">
                @Html.ValidationMessageFor(m => m.Job_Education)
            </small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Scientist, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Scientist, new { @class = "form-control" })
            <small class="text-danger">
                @Html.ValidationMessageFor(m => m.Scientist)
            </small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Participation, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Participation, new { @class = "form-control" })
            <small class="text-danger">
                @Html.ValidationMessageFor(m => m.Participation)
            </small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Degree, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Degree, new { @class = "form-control" })
            <small class="text-danger">
                @Html.ValidationMessageFor(m => m.Degree)
            </small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            <small class="text-danger">
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Регистрация" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
