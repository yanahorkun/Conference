@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="header">
        <div class="container">
            <a class="navbar-brand" href="/Home"><img src="~/Content/images/logo.png" alt="NT"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home">Головна <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Інформація
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item clikblock1" href="#programm">Напрямки роботи конференції</a>
                            <a class="dropdown-item clikblock2" href="#importantDates">Важливі дати</a>
                            <a class="dropdown-item clikblock3" href="#address">Адреса</a>
                            <a class="dropdown-item clikblock4" href="#secretariat">Секретаріат</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Учасникам
                        </a>
                        <div class="dropdown-menu clikblock5" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item clikblock5" href="#forStudents">Вимоги до тез доповідей</a>
                            <a class="dropdown-item  clikblock5" href="#forStudents">Зразок оформлення тез доповідей</a>
                            <a class="dropdown-item  clikblock5" href="#forStudents">Завантаженні статті автора</a>
                            <a class="dropdown-item  clikblock5" href="#forStudents">Завантаженні статті всіх авторів</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link clikblock4" href="#secretariat">Контакти</a>
                    </li>
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-container" }))
                        {
                        @Html.AntiForgeryToken()
                        <li class="nav-item">
                            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link clikblock4" })

                        </li>
                        <li class="nav-item">
                            <a class="nav-link clikblock4" href="javascript:document.getElementById('logoutForm').submit()">Вийти</a>
                        </li>
                        }
                    }
                    <li class="nav-item">
                        @*Html.Partial("_LoginPartial")*@
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="stopblock3" id="address">
        <div class="row">
            <div class="col-6"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10161.938026356665!2d30.47063277490289!3d50.45070184798421!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d4ce80bb14c36b%3A0x5c4eb5067e6b48c6!2z0YPQuy4g0JHQvtCz0LTQsNC90LAg0JPQsNCy0YDQuNC70LjRiNC40L3QsCwgMjQsINCa0LjQtdCyLCAwMjAwMA!5e0!3m2!1sru!2sua!4v1587827393972!5m2!1sru!2sua" width="100%" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe></div>
            <div class="col-6">
                <ul class="footerUl" type="none">
                    <li>
                        <a href="https://goo.gl/maps/WnioLpq1rf9PFCybA">
                            Вулиця Богдана Гаврилишина, 24,
                            м. Київ, 02000<br>(біля станції метро "Політехнічній інститут")
                        </a>
                    </li>
                    <li></li>
                    <li></li>
                </ul>
            </div>

        </div>
    </footer>
    <button class="topButton "><a href="#top" class="clickblock6"><img src="~/Content/images/arrows.png" alt=""></a></button>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
